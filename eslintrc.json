{
  "extends": ["standard"],
  "parser": "babel-eslint",
  "rules": {
    "camelcase": 2,
    "max-len": [2, 120, 4, {
      "ignoreComments": true,
      "ignoreUrls": true
    }],
    "handle-done-callback": 2,
    "no-exclusive-tests": 2,
    "no-global-tests": 2,
    "no-pending-tests": 2,
    "no-skipped-tests": 1,
    "valid-jsdoc": [
      2,
      {
        "prefer": {
          "virtual": "abstract",
          "extends": "augments",
          "constructor": "class",
          "const": "constant",
          "defaultvalue": "default",
          "desc": "description",
          "host": "external",
          "fileoverview": "file",
          "overview": "file",
          "emits": "fires",
          "func": "function",
          "method": "function",
          "var": "member",
          "arg": "param",
          "argument": "param",
          "return": "returns",
          "exception": "throws"
        },
        "requireReturn": false
      }
    ]
  }
}
